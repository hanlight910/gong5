<!-- views/main.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
</head>
<body>
    <!-- Navigation Bar -->
    <nav>
        <h1>Onelight</h1>
        <% if (isLoggedIn) { %>
            <a href="/profile">내정보수정</a>
            <a href="/products/create">상품생성</a>
        <% } else { %>
            <a href="/signup">회원가입</a>
            <a href="/login">로그인</a>
        <% } %>
    </nav>

    <!-- Main page content -->
    <div>
        <% products.forEach(product => { %>
            <!-- Render each product in the list -->
            <h2><%= product.title %></h2>
            <!-- Add more details as needed -->
        <% }); %>
    </div>

    <script src="/scripts/main.js"></script>
</body>
</html>
